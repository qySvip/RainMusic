<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.gcssloop.widget.RCRelativeLayout
        android:id="@+id/mine_list_layout"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_margin="10dp"
        app:round_corner="5dp">
        <ImageView
            android:id="@+id/mine_list_img"
            android:scaleType="centerCrop"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@mipmap/img_head"/>
    </com.gcssloop.widget.RCRelativeLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="80dp"
        android:orientation="vertical"
        android:layout_toRightOf="@id/mine_list_layout">
        <TextView
            android:id="@+id/mine_list_title"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="bottom"
            android:text="@string/mine_list_title"
            android:textColor="@color/black"
            android:textSize="15sp"/>
        <TextView
            android:id="@+id/mine_list_content"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="@string/mine_list_content"
            android:textColor="@color/SpringGreen"
            android:textSize="13sp"/>
    </LinearLayout>
    <ImageView
        android:id="@+id/mine_list_button"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_margin="10dp"
        android:layout_alignParentRight="true"
        android:padding="15dp"
        android:src="@drawable/img_mine_button"/>

</RelativeLayout>